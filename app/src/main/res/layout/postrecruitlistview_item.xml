<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/postRecruitListView_caseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="案件名稱"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/postRecruitListView_caseContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="案件內容"
        android:textSize="18sp"
        android:layout_below="@+id/postRecruitListView_caseName"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/postRecruitListView_btEndRecruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="完成招募" />

    <Button
        android:id="@+id/postRecruitListView_btCancelRecruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postRecruitListView_btEndRecruit"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="取消招募" />

    <Button
        android:id="@+id/postRecruitListView_btApplyMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postRecruitListView_btCancelRecruit"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="申請會員" />
</RelativeLayout>