<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:background="@color/toolbar_color"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"

            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivEditUser"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/dog"
                app:civ_border_width="2dp"
                app:civ_border_color="#ffffff"
                />

            <EditText
                android:id="@+id/etEditName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用者名稱"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:elevation="8dp"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="#00ffffff"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    >

                    <Button
                        android:id="@+id/btEditTrack"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/heart"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    >

                    <Button
                        android:id="@+id/btEditGallery"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/gallery"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    >

                    <Button
                        android:id="@+id/btEditEvaluation"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/evaluation"
                        />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司"
                        android:textSize="20sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        >

                        <ImageButton
                            android:id="@+id/btEditComplete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_check_black_24dp"
                            android:background="@color/white"
                            />
                    </LinearLayout>

                </LinearLayout>


                <EditText
                    android:id="@+id/etEditCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="公司"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作經歷"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    />
                <EditText
                    android:id="@+id/etEditWorkExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="工作經歷"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="專長"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="工作類型"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20sp"
                        android:layout_marginStart="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="專長"
                        android:textSize="20sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <Button
                        android:layout_width="85dp"
                        android:layout_height="33dp"
                        android:text="工作類型"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        />
                    <EditText
                        android:id="@+id/etEditExpertise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="工作類型"
                        android:textSize="18sp"
                        android:layout_marginStart="5dp"
                        />
                    <EditText

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="專長能力"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="聯絡方式"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="手機"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LINE"
                        android:textSize="20sp"
                        android:layout_marginStart="20dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <EditText
                        android:id="@+id/etEditPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="手機"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp"
                        />
                    <EditText
                        android:id="@+id/etEditLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="LINE"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp"
                        />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="居住地"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/etEditLive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="居住地"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>